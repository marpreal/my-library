// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id        Int      @id @default(autoincrement())
  bookId    Int
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  review    String
  rating    Int
  createdAt DateTime @default(now())
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  date        DateTime
  imageUrl    String?
  description String?
  publisher   String?
  reviews     Review[]
}

model MovieReview {
  id        Int      @id @default(autoincrement())
  movieId   Int
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  review    String
  rating    Int
  createdAt DateTime @default(now())
}

model Movie {
  id          Int           @id @default(autoincrement())
  title       String
  director    String?
  releaseDate DateTime?
  imageUrl    String?
  description String?
  genre       String?
  viewedDate  DateTime
  reviews     MovieReview[]
}
